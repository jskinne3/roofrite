---
title: Template title
template: extender.njk
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/main.css">
    <link href="https://fonts.googleapis.com/css?family=Lato|Public+Sans" rel="stylesheet">

    <title>{{ title }}</title>
    <meta property="og:description" content="{{ description }}" />
    <meta property="og:image" content="/assets/img/logo.png" />
  </head>
  <body>

    {% include "header.njk" %}

    {% include "nav.njk" %}

    <video playsinline autoplay muted loop poster="/assets/img/hero.png" id="bgvid">
      <source src="/assets/vid/hero.webm" type="video/webm">
    </video>
    <div class="viewport-header">
      <h1>{{ description }}</h1>
    </div>

    <section class="motto">
      <p>{{ motto }}</p>
    </section>

    <main>
      <div class="maintext">
        {{ content | safe }}
      </div>
      <figure class="rightfig">
        <img src="/assets/img/cropped-Roof-Rite-Exteriors-Lincoln-Nebraska-3.jpg" />
      </figure>
    </main>

    {% include "footer.njk" %}
    
  </body>
</html>

<!doctype html>
<html lang="en">
  <head>
    {% include "head.njk" %}
  </head>
  <body>

    {% include "header.njk" %}

    {% include "nav.njk" %}

    <video playsInline autoPlay muted loop poster="/assets/img/hero.png" id="bgvid">
      <source src="/assets/vid/hero.webm" type="video/webm">
      <source src="/assets/vid/hero.mp4"  type="video/mp4">
    </video>
    <script>
      document.getElementById("bgvid").play();
    </script>
    <div class="viewport-header">
      <h1>{{ description }}</h1>
      <div class="contact-form">
        <h2>Contact us</h2>
        {% include "contact.njk" %}
      </div>
    </div>

    {% include "badges.njk" %}

    <main>
      <div class="maintext">
        {{ content | safe }}
      </div>
      <figure class="rightfig">
        <img src="/assets/img/IMG_4238.png" />
      </figure>
    </main>

    {% include "cards.njk" %}
    {% include "quotes.njk" %}
    {% include "gallery.njk" %}
    {% include "locations.njk" %}
    {% include "footer.njk" %}
    
  </body>
</html>
